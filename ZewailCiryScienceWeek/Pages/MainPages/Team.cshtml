@page
@model ZewailCiryScienceWeek.Pages.MainPages.TeamModel
@{
    
    Layout = "_LayoutOFMainPageForDifferetUser";

}
<!-- ======= Speakers Header Section ======= -->
<section id="hero">
    <div class="hero-container" data-aos="zoom-in" data-aos-delay="100">
        <h1 class="mb-4 pb-0">The Team For<br> Zewail City Science Featival</h1>
        <p class="mb-4 pb-0">10-12 December, Downtown Conference Center, New York</p>
    </div>
</section>
<!-- ======= Speakers Header Section ======= -->
<section class="m-4 p-5">
    <div class="section-title">
        <h2>Our Expert Team</h2>
    </div>
    <form class="search mb-4 " method="post" id="search">
        <i class="fa fa-search"></i>
        <input type="text" class="form-control" placeholder="Search For The committe" name="part">
        <button class="btn btn-primary" href="#search">Search</button>
    </form>
    <section class="differentCommites">
        @for (int i = 0; i < Model.festivalCommitteeClasses.Count(); i++)
        {
            <section class="commitee section">
                <div class="card mb-5 border p-4 shadow-lg ">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex justify-content-center align-items-center">
                            <div class="section-header">
                                <h2>@Model.festivalCommitteeClasses[i].CommitteeName</h2>
                                <p>
                                   @Model.festivalCommitteeClasses[i].CommitteeDescription
                            </div>
                        </div>
                            <div class="card-body  row col-md-8 text-center">
                                @for (int j = 0; j < Model.festivalCommitteeClasses[i].Members.Count(); j++)
                                {
                                    <div class="col-md-3">
                                    <img class="w-75 h-50 rounded-circle" src="/img/MainPagePic/Team.png" />
                                        <div class="text-center">
                                        <p>@Model.festivalCommitteeClasses[i].Members[j].FirstName
                                            @Model.festivalCommitteeClasses[i].Members[j].MiddleName
                                            @Model.festivalCommitteeClasses[i].Members[j].LastName
                                        
                                        </p>
                                        <p>@Model.festivalCommitteeClasses[i].Members[j].Position</p>
 
                                        <div class="social">
                                            @for (int k = 0; k < Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks.Count(); k++)
                                            {

                                                if (Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k].Contains("facebook"))
                                                {
                                                    <a href=@Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k]>

                                                        <i class="bi bi-facebook"></i>

                                                    </a>
                                                }
                                                else if (Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k].Contains("instagram"))
                                                {
                                                    <a href=@Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k]>

                                                        <i class="bi bi-instagram text-dark"></i>

                                                    </a>
                                                }
                                                else if (Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k].Contains("linkedin"))
                                                {
                                                    <a href=@Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k]>

                                                        <i class="bi bi-linkedin"></i>

                                                    </a>
                                                }
                                                else if (Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k].Contains("twitter"))
                                                {
                                                    <a href=@Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k]>

                                                        <i class="bi bi-twitter"></i>

                                                    </a>
                                                }
                                                else if (Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k].Contains("@"))
                                                {
                                                    <a href=@Model.festivalCommitteeClasses[i].Members[j].SocialMediaLinks[k]>

                                                        <i class="bi bi-envelope"></i>

                                                    </a>
                                                }
                                            }
                                        </div>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
            </section>


        }
    </section>

</section>

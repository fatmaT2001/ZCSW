@page
@model ZewailCiryScienceWeek.Pages.Visitor.IndexModel
@{
}
<div class="page-content">
		<div class="form-v10-content">
		<form class="form-detail" method="post" id="myform" asp-page="signup">
				<div class="form-left" style="padding-top: 30px">
					<h2>Sign Up</h2>
					
					<div class="form-group">
						<div class="form-row form-row-1">
							<input type="text"  id="first_name" class="input-text" asp-for="@Model.p1.fname" placeholder="First Name" required>
						</div>
					<div class="form-row">
						<input type="text" class="input-text" id="midname" asp-for="@Model.p1.midname" placeholder="midname" required>
					</div>
					</div>
					<div class="form-row form-row-2">
							<input type="text"  id="last_name" class="input-text" asp-for="@Model.p1.lname"  placeholder="Last Name" required>
						</div>
					<div class="form-row">
						<select  asp-for="@Model.v1.Gender">
						    <option class="option" value="title">Gender</option>
						    <option class="option" value="businessman">Male</option>
						    <option class="option" value="reporter">Female</option>

						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down" ></i>
						</span>
					</div>
					<div class="form-row">
						<select  asp-for="@Model.p1.usertype">
						    <option class="option" value="title">Type</option>
						    <option class="option" value="0">visitor</option>
						    <option class="option" value="4"> researcher</option>
z
						</select>
						<span class="select-btn">
						  	<i class="zmdi zmdi-chevron-down"></i>
						</span>
					</div>
				<div class="form-row form-row-2">
							<input type="text"  id="age" class="input-text"  asp-for="@Model.v1.age" placeholder="Age" >
						</div>
				<div class="form-row">
					<input type="text"  id="ssn" class="input-text" asp-for="@Model.p1.ssn" placeholder="Social Security Number" required>
				</div>
				<div class="form-row">
					<input type="text"  class="phone" id="phone"  asp-for="@Model.p1.phonenum"  placeholder="Phone Number" required>
				</div>

				
			</div>
			<div class="form-right" style="background: #4D7577 ; padding-top: 130px">
					@*<h2>Contact Details</h2>*@
				<div class="form-row">

					<input type="email"  class="email" id="email" asp-for="@Model.p1.email" placeholder="Email" required>
				</div>
				<div class="form-row">
					<input type="password"  class="password" id="password" asp-for="@Model.p1.password" placeholder="Password" required>
				</div>
				<div class="form-row">
					<input type="password"  class="confirm_password" id="confirm_password" asp-for="@Model.p1.repassword" placeholder="Confirm Password" required>
				</div>
				<div class="form-row">
					<select  asp-for="@Model.v1.knowus">
						<option class="option" value="title">How did you know us</option>
						<option class="option" value="businessman">Facebook</option>
						<option class="option" value="reporter">Instgram</option>
						<option class="option" value="reporter">Other</option>
					</select>
					<span class="select-btn">
						<i class="zmdi zmdi-chevron-down"></i>
					</span>
				</div>
				
					
					<div class="form-row">
						@*<input type="text" name="your_email" id="your_email" class="input-text" required pattern="[^@]+@[^@]+.[a-zA-Z]{2,6}" placeholder="Your Email">*@
					</div>
					<div class="form-checkbox">
						<label class="container"><p>I do accept the <a href="#" class="text">Terms and Conditions</a> of your site.</p>
						  	<input type="checkbox" >
						  	<span class="checkmark"></span>
						</label>
					</div>
					<div class="form-row-last">
					<input type="submit" class="register" value="Sign Up" asp-page-handler="sign">
					</div>
					@*<div class="form-row-last">
						<input type="submit"  class="register" value="Sign Up" asp-page-handler="sign">
					</div>*@
				</div>
			</form>
		</div>
	</div>



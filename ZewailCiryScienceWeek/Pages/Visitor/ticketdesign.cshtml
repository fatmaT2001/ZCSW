@page
@model ZewailCiryScienceWeek.Pages.Visitor.ticketdesignModel
@{
}

<div class="limiter">
    <div class="container-login100" style="background: #4D7577; /* fallback for non-supported browsers */
	background: -webkit-linear-gradient(-135deg, #4D7577, #4D7577);
	background: -o-linear-gradient(-135deg, #4D7577, #4D7577);
	background: -moz-linear-gradient(-135deg,#4D7577, #4D7577);
	background: linear-gradient(-135deg, #4D7577, #4D7577);">
        <div class="wrap-login100" style="padding-top: 60px">
            <div>
                <p style="background: linear-gradient(to right, #ff0000, #023b3d); -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-align: center; font-size: 50px; font-family: 'Comic Sans MS', cursive;">Here is Your Ticket Information</p>
            </div>



            <div class="cardWrap">
                <div class="card cardLeft">
                    <h1>Zewail city <span>science festival</span></h1>
                    <div class="title">
                        <h2>@Model.ticket.fname</h2>
              
                        <span>name</span>
                    </div>
                    <div class="name">
                        <h2>T0021</h2>
                        <span>ticket id</span>
                    </div>
                    <div class="seat">
                        <h2> Zewailian Ticket </h2>
                        <span>ticket type </span>
                    </div>
                 @*   <div class="time">
                        <h2> Day7 </h2>
                        <span> attached day</span>
                    </div>*@

                </div>
                <div class="card cardRight">
                    <div class="eye"></div>
                   
                    <div class="number">
                        <h3>@Model.ticket.day</h3>
                        <span></span>
                    </div>
                    <div class="barcode"></div>   
                    </div>

            </div>
        </div>
    </div>
</div>

@page
@model ZewailCiryScienceWeek.Pages.Admin.promocodeModel
@{
}
@{
    Layout = "_LayoutOFMainPageForDifferetUser";
}

<body>
    <div class="form-body" style="background-color: #E5EBEB" ;>
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <div style="text-align:center;">
                            <h3>Add a promo code</h3>
                        </div>

                        <form class="requires-validation" novalidate>

                            <div class="col-md-12">
                                <input class="form-control" type="text" name="name" placeholder="Promo Code" asp-for="@Model.pc.PromoName" required>
                                <span asp-validation-for="@Model.pc.PromoName"></span>
                            </div>

                            <div class="col-md-12">
                                <input class="form-control" type="text" name="Discount Percentage" placeholder="Discount Percentage" asp-for="@Model.pc.DiscountPercent" required>
                                <span asp-validation-for="@Model.pc.DiscountPercent"></span>
                            </div>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="Number Of Tickets Offered" placeholder="Number Of Tickets Offered" asp-for="@Model.pc.NumTicketsOffered" required>
                                <span asp-validation-for="@Model.pc.NumTicketsOffered"></span>
                            </div>

                            <div class="col-md-12">
                                <input class="form-control" type="text" name="Number Of Passing" placeholder="Number Of Passing" asp-for="@Model.pc.NumOfPassing" required>
                                <span asp-validation-for="@Model.pc.NumOfPassing"></span>
                            </div>
                            <div class="col-md-12">
                                <input class="form-control" type="text" name="Assigned To" placeholder="Assigned To" asp-for="@Model.pc.AssignedTo" required>
                                <span asp-validation-for="@Model.pc.AssignedTo"></span>
                            </div>




                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                                <label class="form-check-label">I confirm that all data are correct</label>
                                <div class="invalid-feedback">Please confirm that the entered data are all correct!</div>
                            </div>


                            <div class="form-button mt-3">
                                <button type="submit" class="btn btn-primary-promo">Add The Promo Code</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>











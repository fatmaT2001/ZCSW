<section class="p-4 m-4 ">
    <div class="section-title">
        <h2 class="text-center">About Aewail City Science Week</h2>

    </div>
    <div class="card mb-5 border">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img class="card-img" src="/img/MainPagePic/AboutFeatival.jpeg">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">Zewail City Science Featival</h3>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><a class="text-muted btn about-btn">Read More</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-5 border">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img class="card-img" src="/img/MainPagePic/Conference/Conference.png">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">Zewail City Science Conference</h3>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><a class="text-muted  btn about-btn" href="MainPages/Conference">Read More</a></p>
                </div>
            </div>
        </div>
    </div>
</section>
<!--=======================================================================-->
<!-- About End -->
<!--=======================================================================-->
<!-- Team End -->
<!--=======================================================================-->
<section id="team" class="team section-bg section_team">
    <div class="m-2 p-4">
        <div class="section-title">
            <h2>Our Expert Team</h2>
            <div class="underline"></div>
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Obcaecati, ducimus.</p>
        </div>
        <div class="row">
            @for (int i = 0; i < Model.TeamClasses.Count(); i++)
            {
                <div class="col-lg-3 h-100">
                    <div class="member card align-items-center mb-2">
                        <div class="teampic"><img src="/img/MainPagePic/Team.png" class="card-img-top rounded-circle" alt=""></div>
                        <div class="member-info card-body">
                            <h4 class="card-title">@Model.TeamClasses[i].FirstName @Model.TeamClasses[i].LastName</h4>
                            <p class="card-text">@Model.TeamClasses[i].Position @Model.TeamClasses[i].CommitteeName</p>

                            <div class="social">
                                @for (int j = 0; j < Model.TeamClasses[i].SocialMediaLinks.Count(); j++)
                                {

                                    if (Model.TeamClasses[i].SocialMediaLinks[j].Contains("facebook"))
                                    {
                                        <a href=@Model.TeamClasses[i].SocialMediaLinks[j]>

                                            <i class="bi bi-facebook"></i>

                                        </a>
                                    }
                                    else if (Model.TeamClasses[i].SocialMediaLinks[j].Contains("instagram"))
                                    {
                                        <a href=@Model.TeamClasses[i].SocialMediaLinks[j]>

                                            <i class="bi bi-instagram"></i>

                                        </a>
                                    }
                                    else if (Model.TeamClasses[i].SocialMediaLinks[j].Contains("linkedin"))
                                    {
                                        <a href=@Model.TeamClasses[i].SocialMediaLinks[j]>

                                            <i class="bi bi-linkedin"></i>

                                        </a>
                                    }
                                    else if (Model.TeamClasses[i].SocialMediaLinks[j].Contains("twitter"))
                                    {
                                        <a href=@Model.TeamClasses[i].SocialMediaLinks[j]>

                                            <i class="bi bi-twitter"></i>

                                        </a>
                                    }
                                    else if (Model.TeamClasses[i].SocialMediaLinks[j].Contains("@"))
                                    {
                                        <a href=@Model.TeamClasses[i].SocialMediaLinks[j]>

                                            <i class="bi bi-envelope"></i>

                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="text-center m-3">
            <a class="about-btn btn text-black w-25">                  Read More                </a>

        </div>
    </div>
</section>
<!--=======================================================================-->
<!-- Team End -->
<!--=======================================================================-->
